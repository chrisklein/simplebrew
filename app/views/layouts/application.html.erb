  <%= csrf_meta_tags %>
</head>
<body class="clearfix">	
  <div class="content clearfix">	
	<%= render 'layouts/header' %>
	
	<% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>

    <div id="main" role="main">
	<%= yield %>
	</div>
	
	<%= render 'layouts/footer' %>
  </div>	
	
